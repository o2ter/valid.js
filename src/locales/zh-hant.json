{
  "mixed": {
    "required": "${field}為必填",
    "where": "${message}",
    "oneOf": "${field}必須為以下之一: ${values}",
    "notOneOf": "${field}不得是以下之一: ${values}",
    "type": "${field}必須為\"${type}\"類"
  },
  "string": {
    "notEmpty": "${field}不能為空",
    "length": "${field}必須包含${length}個字符",
    "min": "${field}必須至少包含${min}個字符",
    "max": "${field}必須最多包含${max}個字符",
    "matches": "${field}必須符合: \"${regex}\"",
    "email": "${field}必須為有效電郵地址",
    "url": "${field}必須為有效URL",
    "uuid": "${field}必須為有效UUID",
    "trim": "${field}首尾不能有空白",
    "lowercase": "${field}必須為細楷",
    "uppercase": "${field}必須為大楷"
  },
  "number": {
    "min": "${field}必須為${min}或以上",
    "max": "${field}必須為${max}或以下",
    "lessThan": "${field}必須少於${less}",
    "moreThan": "${field}必須大於${more}",
    "positive": "${field}必須為正數",
    "negative": "${field}必須為負數",
    "integer": "${field}必須為整數"
  },
  "date": {
    "min": "${field}必須為${min}之後",
    "max": "${field}必須為${max}之前",
    "lessThan": "${field}必須少於${less}",
    "moreThan": "${field}必須大於${more}"
  },
  "array": {
    "notEmpty": "${field}不能為空",
    "min": "${field}必須至少有${min}項",
    "max": "${field}必須最多有${max}項",
    "length": "${field}必須有${length}項"
  }
}